{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": ["ES2022"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"types": ["node", "@cloudflare/workers-types"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "tmp"]
}
